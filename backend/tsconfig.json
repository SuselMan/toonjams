{
  "compilerOptions": {
    "esModuleInterop": true,
    "removeComments": true,
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@front/*": ["../frontend/dist"],
      "@types/*": ["types/*"],
      "@routes/*": ["routes/*"],
      "@entities/*": ["entities/*"],
      "@actions/*": ["dbActions/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "typings"]
}